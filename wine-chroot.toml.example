# Wine Chroot Configuration Example
# Copy this file to ~/.config/wine-chroot.toml and customize as needed
#
# Generate this file automatically with: wine-chroot config --init
# Create a new chroot automatically with: wine-chroot init

[chroot]
# Name of the schroot configuration
name = "debian-amd64"

# Path where the chroot is installed
path = "/srv/debian-amd64"

# Architecture of the chroot (amd64 for x86-64 emulation)
architecture = "amd64"

# Debian version to use
debian_version = "trixie"

[wine]
# Wine prefix path inside the chroot
# This is where Wine stores its configuration and virtual Windows drive
prefix = "/root/.wine"

# Enable 32-bit (i386) support for running 32-bit Windows applications
enable_i386 = true

[desktop]
# Directory for storing extracted icons
icon_dir = "~/.local/share/icons"

# Directory for .desktop launcher files
applications_dir = "~/.local/share/applications"

# Categories for application menu classification
categories = ["Wine", "WindowsApps"]

[execution]
# Use pkexec (true) or sudo (false) for privilege elevation
# sudo is more reliable for .desktop launchers
# pkexec may have issues with GUI applications
use_pkexec = false

# Preserve environment variables when entering the chroot
preserve_environment = true

# Enable X11 forwarding for GUI applications
x11_forwarding = true

